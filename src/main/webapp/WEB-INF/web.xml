<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
    version="2.5">

    <display-name>GWTResponsive</display-name>
    <servlet>
        <servlet-name>com.cuppafame.gwtresponsive.GWTResponsive PrayerService</servlet-name>
        <servlet-class>com.cuppafame.gwtresponsive.server.application.prayer.PrayerService</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>com.cuppafame.gwtresponsive.GWTResponsive PrayerService</servlet-name>
        <url-pattern>/GWTResponsive/prayerService</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>GWTResponsive.html</welcome-file>
    </welcome-file-list>

    <listener>
        <listener-class>com.cuppafame.gwtresponsive.server.guice.GuiceServletConfig</listener-class>
    </listener>

    <filter>
        <filter-name>guiceFilter</filter-name>
        <filter-class>com.google.inject.servlet.GuiceFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>guiceFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
</web-app>
